pipeline {
    agent any

    stages {
        stage('Clone Gay Repository') {
            steps {
                git branch: 'main', url: "https://github.com/poommieiei/gay-jenkins.git"
            }
        }
        stage('Build') {
            steps {
                // รันคำสั่ง shell สำหรับติดตั้ง dependencies
                sh 'npm install'

                echo 'Building...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // เพิ่มคำสั่ง deploy ที่นี่
            }
        }
    }
}

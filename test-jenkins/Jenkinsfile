pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            step{
                git branch: "develop", 
                url: "https://github.com/poommieiei/learn-jenkins.git"
            }
            post {
                away{
                    echo 'Code checked out successfully.'
                }
                success {
                    echo 'Code checked out successfully.'
                }
                failure {
                    echo 'Failed to checkout code.'
                }
            }
        }
        stage('Install Node.js') {
            steps {
                sh 'curl -sL https://deb.nodesource.com/setup_16.x | bash -'
                sh 'apt-get install -y nodejs'
                sh 'node -v'
            }
            post {
                success {
                    echo 'Node.js installed successfully.'
                }
                failure {
                    echo 'Failed to install Node.js.'
                }
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'cd test-jenkins && npm install'
            }
            post {
                away{
                    echo 'Dependencies installed successfully.'
                }
                success {
                    echo 'Dependencies installed successfully.'
                }
                failure {
                    echo 'Failed to install dependencies.'
                }
            }
        }
        stage('Merge Code'){
            when {
                branch 'develop'
            }
            steps {
                sh 'cd test-jenkins && git merge origin/develop'
            }
            post {
                success {
                    echo 'Code merged successfully.'
                }
                failure {
                    echo 'Failed to merge code.'
                }
            }
        }
    }
}
